@using Cantini.Database.Model

@model Student

<form method="post" asp-action="Delete">
	<input asp-for="SId" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Student</h2>
			<hr />
		</div>
		
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="SName">Food Name</label>
			<input asp-for="SName" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="SEmail">Food Price</label>
			<input asp-for="SEmail" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Faculty">Food Price</label>
			<input asp-for="Faculty" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Student" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
