@using Cantini.Database.Model

@model FoodItem

<form method="post" asp-action="Delete">
	<input asp-for="FId" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Food-Item</h2>
			<hr />
		</div>
		
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="FName">Food Name</label>
			<input asp-for="FName" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="FPrice">Food Price</label>
			<input asp-for="FPrice" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="FoodItem" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
