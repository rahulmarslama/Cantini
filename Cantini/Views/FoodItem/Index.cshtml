@using Cantini.Database.Model
@model IEnumerable<FoodItem>

@{
    ViewData["Title"] = "Index";
}
    <div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Food-Item List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="FoodItem" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Food-Item
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Food Name
			</th>

            <th>
                Food Price
			</th>
             <th></th>

		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                
                <td width="50%">
                    @obj.FName
				</td>
                <td width="25%">
                    @obj.FPrice
				</td>
                <td>
                    <div=class="w-75 btn-group" role="group">
                        <a asp-controller="FoodItem" asp-action="Edit" asp-route-id="@obj.FId"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="FoodItem" asp-action="Delete" asp-route-id="@obj.FId"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
				</td>
                
                
			</tr>
        }
    </tbody>

</table>
</div>



