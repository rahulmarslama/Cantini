@using Cantini.Database.Model

@model FoodItem

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Food-Item</h2>
			<hr />
		</div>
		
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="FName">Food Name</label>
			<input asp-for="FName" class="form-control" />
			<span asp-validation-for="FName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="FPrice">Food Price</label>
			<input asp-for="FPrice" class="form-control" />
			<span asp-validation-for="FPrice" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="FoodItem" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
